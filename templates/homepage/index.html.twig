{% extends 'base.html.twig' %}
{% block body %}
    <main class="py-16">
        <div class="bg-white">
            <div class="bg-white lg:max-w-7xl mx-auto px-4 py-16 w-1/2">
                <h2 class="text-xl font-bold text-gray-900">Items from {{ items[0].clubName }}:</h2>
                <div class="mt-8 grid grid-cols-1 gap-y-12 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8 justify-center">
                    {% for item in items %}
                        <div>
                            <div class="relative">
                                <div class="relative h-72 w-full overflow-hidden rounded-lg">
                                    <img loading="lazy" src="{{ item.thumbnail }}" alt="Item description"
                                         class="h-full w-full object-cover object-center">
                                </div>
                                <div class="relative mt-4">
                                    <h3 class="text-sm font-medium text-gray-900">{{ item.name }} Trikot</h3>
                                    <p class="mt-1 text-sm text-gray-500">Position: {{ item.position }}</p>
                                    <p class="mt-1 text-sm text-gray-500">Nationality: {{ item.nationality }}</p>
                                </div>
                                <div class="absolute inset-x-0 top-0 flex h-72 items-end justify-end overflow-hidden rounded-lg p-4">
                                    <div aria-hidden="true"
                                         class="absolute inset-x-0 bottom-0 h-36 bg-gradient-to-t from-black opacity-50"></div>
                                    <p class="relative text-lg font-semibold text-white">$ {{ item.price }}</p>
                                </div>
                            </div>
                            {% if user %}
                                <div class="mt-6">
                                    <a href="{{ path('app_shopping_cart_save', {'itemId': item.itemId}) }}"
                                       class="relative flex items-center justify-center rounded-md border border-transparent bg-gray-100 px-8 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200">Add
                                        to bag</a>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
